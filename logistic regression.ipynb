import pandas as pd
import numpy as np
from sklearn.model_selection import train_test_split
from sklearn.feature_extraction.text import TfidfVectorizer
from sklearn.linear_model import LogisticRegression
from sklearn.metrics import classification_report

# Load data
train = pd.read_csv('/kaggle/input/map-charting-student-math-misunderstandings/train.csv')
test = pd.read_csv('/kaggle/input/map-charting-student-math-misunderstandings/test.csv')

print(train.shape)
train.head()

# Select only text and label
df = train[['StudentExplanation', 'Category']].copy()

# Drop rows with missing text
df = df.dropna(subset=['StudentExplanation'])

# Basic cleaning: lowercase text
df['clean_text'] = df['StudentExplanation'].str.lower()

print(df['Category'].value_counts())

import re

def clean_text(text):
    text = text.lower()
    text = re.sub(r'[^a-z\s]', '', text)   # remove punctuation/numbers
    text = re.sub(r'\s+', ' ', text)       # remove extra spaces
    return text.strip()

df['clean_text'] = df['StudentExplanation'].apply(clean_text)

train_df, val_df = train_test_split(df, test_size=0.2, random_state=42, stratify=df['Category'])

vectorizer = TfidfVectorizer(
    stop_words='english',
    max_features=5000,   # keep only 5000 most important words
    ngram_range=(1,2)    # unigrams + bigrams
)

X_train = vectorizer.fit_transform(train_df['clean_text'])
X_val = vectorizer.transform(val_df['clean_text'])

model = LogisticRegression(max_iter=200, class_weight='balanced')

model.fit(X_train, train_df['Category'])

preds = model.predict(X_val)
print(classification_report(val_df['Category'], preds))

# Transform test data
X_test = vectorizer.transform(test['StudentExplanation'].fillna('').str.lower())

# Predict
test_preds = model.predict(X_test)

# Build submission
sub = pd.DataFrame()
sub['row_id'] = test['row_id']
sub['Category:Misconception'] = test_preds

# Convert single labels into required multi-label format
# (Temporary baseline: predict the main category, keep rest NA)
sub['Category:Misconception'] = sub['Category:Misconception'].apply(lambda x: f"{x}:NA")

# Save
sub.to_csv('submission.csv', index=False)
print("âœ… submission.csv ready")
